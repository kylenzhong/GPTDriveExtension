{
    "manifest_version": 3,
    "name": "GPT Access to Google Drive",
    "version": "1.0",
    "description": "Integrate GPT with Google Drive",
    "host_permissions": [
        "https://chat.openai.com/*"
      ],
    "permissions": [
      "activeTab",
      "storage",
      "identity"
    ],
    "content_scripts": [
        {
            "matches": ["https://chat.openai.com/*"],
            "js": ["content.js"]
        }
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/driveIcon.png", 
        "48": "images/driveIcon.png",
        "128": "images/driveIcon.png"
      }
    },
    "icons": {
      "16": "images/driveIcon.png",
      "48": "images/driveIcon.png",
      "128": "images/driveIcon.png"
    },
    "oauth2": {
      "client_id": "707745136498-okua4s1ph6ghgde8lvnbimnc3sh7lepg.apps.googleusercontent.com",
      "scopes": [
        "https://www.googleapis.com/auth/drive.file",
        "https://www.googleapis.com/auth/drive.readonly"
      ]
    }
  }
  